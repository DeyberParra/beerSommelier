<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeerSommelier" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="fragment_detail" parent="Theme.BeerSommelier">
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="super_titles_fragment">
        <item name="fontFamily">@font/roboto_condenced_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="title">
        <item name="fontFamily">@font/roboto_condenced_bold</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="title_center" parent="title">
        <item name="android:gravity">center</item>
    </style>
    <style name="title_left" parent="title">
        <item name="android:gravity">left</item>
    </style>

    <style name="cursive_title_fragment">
        <item name="fontFamily">@font/dancing_script</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="descriptions">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="descriotion_left" parent="descriptions">
        <item name="android:gravity">left</item>
    </style>
    <style name="enfasis_text">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>